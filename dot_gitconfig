[include]
	path = ~/.git-personal-config
[pager]
	branch = false
	stash = false
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[push]
	autoSetupRemote = true
[alias]
	ap = ! git add -N . && git add -p
